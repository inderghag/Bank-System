@model IEnumerable<BankManagementData.Models.TransactionInfo>

@{
    ViewData["Title"] = "AccountDetails";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<h1>Account Details</h1>

<div>
    <h4>Account Id</h4>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Transaction Name</th>
                <th>Amount Changed</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model)
            {
                <tr>
                    <td align="left">
                        @transaction.date.Day/@transaction.date.Month/@transaction.date.Year
                    </td>
                    <td align="left" >
                        @transaction.transaction_name
                    </td>
                    <td align="left" >
                        @transaction.amount_changed
                    </td>
                    <td align="left">
                        
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="BankAccountOverview" asp-controller="User">Back to List</a>
</div>
